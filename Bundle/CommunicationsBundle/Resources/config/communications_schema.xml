<?xml version="1.0" encoding="UTF-8"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="cool_db" xsi:noNamespaceSchemaLocation="http://www.w3schools.com Cool/Resources/xsd/cool_database.xsd" baseClass="Eulogix\Cool\Lib\Database\Propel\CoolPropelObject" namespace="Eulogix\Cool\Bundle\CommunicationsBundle\Model" defaultIdMethod="native">

    <table name="communication" description="stores stuff sent or received from/to outside like email messages, letters, smss">

        <column name="communication_id" type="INTEGER" primaryKey="true" autoIncrement="true"/>

        <column name="category" type="LONGVARCHAR">
            
            
        </column>

        <column name="type" type="LONGVARCHAR">
            
            
        </column>

        <column name="subject" type="LONGVARCHAR"/>

        <column name="body" type="LONGVARCHAR">
            
        </column>

        <column name="sent_date" type="TIMESTAMP"/>
        <column name="received_date" type="TIMESTAMP"/>

        <column name="transmission_method" type="LONGVARCHAR" description="communication logs such as emails, phonecalls, log their nature here">
            
            
        </column>

        <column name="target" type="LONGVARCHAR" description="phonecalls / faxes and the like store here the number called, or the caller"/>

        <column name="inbound_flag" type="BOOLEAN" required="true" default="FALSE"/>

        <behavior name="extendable"/>
        <behavior name="auditable">
            <parameter name="target" value="EulogixCoolCommunicationsBundle/communications"/>
        </behavior>
        <behavior name="notifier">
            <parameter name="schema" value="communications"/>
            <parameter name="target" value="EulogixCoolCommunicationsBundle/communications"/>
        </behavior>
    </table>

</database>
